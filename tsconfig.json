{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/lib/*": ["./src/shared/lib/*"],
      "@/components/*": ["./src/shared/components/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/theme/*": ["./src/shared/theme/*"]
    },
    "baseUrl": "./src",
  },
  "include": ["next-env.d.ts", "src/tests/test-helpers.d.ts", "types/**/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../balance-pantry/src/lib/types.ts", "../balance-pantry/src/lib/utils.ts", "../balance-pantry/src/components/animated-border/AnimatedBorderBox.tsx"],
  "exclude": ["node_modules"]
}
